html {
    height: 100%;
    max-height: 100%;
}

img {
    max-width: 100%;
}

    body {
        font-size: 100%;   /* ~16px */ /* this is defined in the text resizer css file */
        color: #000000;
        background: #ffffff;
        line-height: 1.5em;
    }

code {
    font-size:13px;
    background: #f8f8f8;
    padding: 2px 5px 2px 5px;
    border: 1px solid #dddddd;
}

pre {
    line-height: 1em; 
    background: #f8f8f8;
    padding: 2px 5px 2px 5px;
}

pre code {
    padding: 0;
    border: none;
}
a {
    color: #0000ff;
    text-decoration: underline; 
}

a:visited {
    color: #cc3399;
    text-decoration: underline; 
} 

a:hover {
    color: #ff0000;
    text-decoration: underline;
}

a:active {
    text-decoration: underline; 
    color: #ff0000;
}
    strong, b {
        color: #000;
    }

    li, ul {
        margin-bottom: 10px;
    } 
   
    p {
    padding: 0;
    margin-top: 40px;
    margin-bottom: 40px;
    }

    blockquote {
        margin-left: .6em;
        padding-left: 1em;
        border-left: 1px solid #666;   
        padding-top: 0;
        padding-bottom: 0;
        margin-top: 35px;
        margin-bottom: 35px;
    }

    aside {
        font-size: 140%;
        color: #333;
        margin-top: 10px;
        text-align: left;
    } 

    h1, h2, h3 {
        color: #000000;
        /* text-align: center; */
    }

    h1 {
        font-size: 160%;
        padding: 0;
        margin: 0;
        line-height: 110%;
    }

    h2, h3 {
        padding-top: 30px;
    }

    h2 {
        font-size: 140%;
    }

    h3 {
       font-size: 120%;
    }

    article {
        /* font-size: 120%; approx same as 1.2em */
 
        font-family: Georgia, serif;
        font-family: Arial, sans-serif;
        font-size: 125%;
        color: #333;

        /* normal or 400 Roboto Slab */
        font-family: 'Roboto Slab', serif;
        font-size: 125%;
        color: #444;

        /* light or 300 Roboto Slab */
        font-family: 'Roboto Slab', serif;
        font-size: 125%;
        color: #000;

        font-family: 'Slabo 27px', serif;
        font-size: 140%;
        color: #222;

        font-family: 'Noto Serif', serif;
        font-size: 135%;
        color: #444;

        font-family: 'Raleway', sans-serif;
        color: #222;

        font-family: "Open Sans", Arial, sans-serif;
        font-size: 120%;
        color: #222;


        line-height: 165%;
        line-height: 1.7em; /* approx similar to 165% */
        /* word-spacing: 1px; */
        /* letter-spacing: .5px;  */
        position: relative;
        /* max-width: 700px; */
        max-width: 640px;
        margin-top: 0;
        margin-right: auto;
        margin-bottom: 0;
        margin-left: auto;
        padding: 0;
        width:95%;
    }

    article footer {
       font-size: 80%;
    }

    hgroup {
        margin-top: 20px;
    }

table {
    font-size: 90%;
}

/* customized HTML tags */

.smallscreens {
    display: none;
}

blockquote.highlighted {
    padding-top:0;
    padding-bottom:0;
    margin-left: .6em;
    padding-left: 1em;
    padding-right: 1em;
    margin-right: 0;
    border-left: 1px solid #666;   
    background: #f5faff;
    margin-top: 35px;
    margin-bottom: 35px;
}

hr.shortgrey {
   border: 0; 
   height: 1px; 
   background: #ddd;
   width: 25%;
   margin-top:2em;
   margin-bottom:2em;
}

.fenceClass {
    overflow-x: scroll;
    background: #f8f8f8;
    border: 1px solid #dddddd;
    padding: 2px 5px 2px 5px;
}

.fenceClass pre {
    white-space: pre;
}

.greytext a {
    color: #888888;
    text-decoration: none;
}

.greytext a:visited {
    color: #888888;
    text-decoration: none;
}

.greytext a:hover {
    color: #000000; 
    text-decoration: underline;
}

.photo-caption {
    font-size:80%;
    line-height:110%;
}

/* custom formatting options */
.post-min-read {
    float:right; 
    font-size:70%; 
    margin: 0 0 0 5px;
    padding: 0;
}

/* heading text - used for the h1, h2, h3, etc tags */
.headingtext a {
    color: #000000;
    text-decoration: none;
}

.headingtext a:visited {
    color: #000000;
    text-decoration: none;
}

.headingtext a:hover {
    color: #000000;
    text-decoration: underline;
}

h2, h3, h4, h5 {
    line-height: 2em;
    border-bottom:1px solid #eee;
}

#largeimageheader {
    position: relative;
    display: table;
    width: 100%;
    height: 50%;
    background: #000000 no-repeat center center; 
    background-size: cover;
    text-align: center;
    color: #ffffff;
}

/* Centres vertically. (IE8+) */
.vertical {
    display: table-cell;
    vertical-align: middle;

/* if want the text on the image to be tinted too, then comment out these two lines.
   these two lines will make the the text color be what's defined in site-head, blog-title, or blog-description.
*/
    z-index: 10; 
    position: relative;
}

#article-title {
    color: #fff;
    font-size: 2.5em;
    line-height: 1.2em; 
    font-weight: bold; 
    display: block;
    font-family: 'Merriweather', Georgia, serif;
    text-shadow: 2px 2px #000000; 
    -moz-text-shadow: 2px 2px 2px #000000;
    -webkit-text-shadow: 2px 2px 2px #000000;
    filter: dropshadow(color=#000000, offx=2, offy=2);
}

#article-description {
    font-size: 1.4em;
    line-height: 1.5em;  
    margin-bottom: 20px; 
    display: block;
    text-shadow: 2px 2px #000000; 
    -moz-text-shadow: 2px 2px 2px #000000;
    -webkit-text-shadow: 2px 2px 2px #000000;
    filter: dropshadow(color=#000000, offx=2, offy=2);
}

.publish-info {
    font-size: 80%;
    text-align: left;
    line-height: 100%;
    margin-top: 20px;
}

#toc {
/*    font-family: "Open Sans", Arial, Helvetica, sans-serif;  */
    font-size: .8em;
    float: right;
    background: #f0fff0; /* light blue */
    display: inline;
    width: 12.5em;
    text-align: left;
    border: 1px solid #cccccc;
    line-height: 1.2em;
    padding-top: .3em;
    padding-bottom: .3em;
    margin: 1.2em 0 1.2em 1.2em;
} 

.toclevel1 {
    margin-left: 0;
}

.toclevel2 {
    margin-left: .3em;
}

.toclevel3 {
    margin-left: .6em;
}

.toclevel4 {
    margin-left: .9em;
}

.toclevel5 {
    margin-left: 1.2em;
}




/***** Media Queries *****/


/* 45em = 720px */
@media only screen and (max-width: 45em) {
     h1 {
            font-size: 140%;
        }
     h2 { 
            font-size: 120%;
        }
     h3 { 
            font-size: 110%;
        }
    aside {
        font-size: 120%;
    }

    .post-min-read {
        display: none; 
    }
#largeimageheader {
        height: 40%; 
    }
    #article-title {
        font-size: 1.5em;
/*
        padding-top: 15%;
        padding-bottom: 15%;
*/
    }
    #article-description {
        /* display: none; */
        font-size: 1.2em;
    }
}

@media only screen and (max-width: 37.5em) {
    #largeimageheader {
        height: 30%; 
    }
     #article-description {
        display: none;
    }
}





